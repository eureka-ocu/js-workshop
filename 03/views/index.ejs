<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/semantic-ui/2.2.2/semantic.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.2/semantic.min.js"></script>
    <style>
      body {
        background-color: #f7f7f7;
      }
    </style>
  </head>
  <body>
    <div class="ui very padded text container vertical segment">
      <div class="ui container">
        <div class="ui center aligned header">
          <img class="ui image" alt="eureka logo" src="/logo.png">
          <div class="content">
            Eureka Messenger
          </div>
        </div>
      </div>
    </div>
    <div class="ui very padded text container vertical segment">
      <div class="ui container">
        <% if (error !== null && typeof data !== 'undefined') { %>
          <% include error %>
        <% } else { %>
          <% include messages %>
        <% } %>
      </div>
    </div>
    <div class="ui very padded right aligned text container vertical segment">
      <div class="ui action fluid small input">
        <input id="messenger" type="text" placeholder="Message...">
        <button id="send-button" class="ui button">Send</button>
      </div>
    </div>
    <script src="/bundle.js"></script>
  </body>
</html>
